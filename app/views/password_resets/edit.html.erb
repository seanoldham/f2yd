<header class="wrap-title">
  <div class="container">
    <h1 class="page-title">Choose a new password</h1>
  </div>
</header>
<div class="container">
<div class="col-md-4">
</div>
<div class="col-md-4">
<%= form_for @user, :url => password_reset_path(@user), :html => {:method => :put}, :role => :form do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <% @user.email %>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, label: "Password", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, label: "Confirm Password", class: "form-control" %>
  </div>
  <%= hidden_field_tag :token, @token %>
  <%= f.submit 'Save' %>
<% end %>
</div>
<div class="col-md-4">
</div>
</div>

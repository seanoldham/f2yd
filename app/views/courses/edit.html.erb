<header class="wrap-title">
  <div class="container">
    <h1 class="page-title">Edit Course</h1>
  </div>
</header>
<%= bootstrap_form_for @course do |f| %>
	<% if @course.errors.any? %>
		<div class="error_messages">
			<h2>Form is invalid</h2>
			<ul>
				<% for message in @course.errors.full_messages %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
			<%= f.text_field :course_num, :id => "course_num" %>
			<%= f.text_field :course_name, :id => "course_name" %>
			<%= f.text_field :meet_time, :id => "meet_time" %>
			<%= f.text_field :room_num, :id => "room_num" %>
			<%= f.text_field :exam_date, :id => "exam_date" %>
			<%= f.select :form_type, options_for_select(%w[GreenScantron BlueScantron BlueBook]), :id => "form_type" %>
				<%= f.submit %>
<% end %>
<h4><%= link_to 'Back', schedule_url %></h4>

<header class="wrap-title">
  <div class="container">
    <h1 class="page-title"><%= title 'My Schedule' %></h1>
    <% description 'My Schedule page.' %>
    <% keywords 'my schedule page' %>
  </div>
</header>
<div class="container">
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Course Number</th>
          <th>Course Name</th>
          <th>Meeting Time</th>
          <th>Room Number</th>
          <th>Exam Dates</th>
          <th></th>
          <th>Form Required</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
    <% @course_list.each do |c| %>
        <tr>
          <td style="vertical-align: middle;"><%= c.course_num %></td>
          <td style="vertical-align: middle;"><%= c.course_name %></td>
          <td style="vertical-align: middle;"><%= c.meet_time.strftime("%I:%M") %></td>
          <td style="vertical-align: middle;"><%= c.room_num %></td>

          <% unless c.exams.empty? %>
            <td style="vertical-align: middle;">
              <% c.exams.each do |exam| %>
                <p><%= exam.date.strftime("%A, %B %d, %Y") %></p>
              <% end %>
              <p><%= link_to '+ Add exam', new_course_exam_path(c) %></p>
            </td>
            <td class="exam_actions">
              <% c.exams.each do |exam| %>
                <p>
                  <%= link_to 'Edit Exam', edit_course_exam_path(c,exam) %><br><%= link_to 'Delete Exam', course_exam_path(c,exam), method: :delete, data: { confirm: 'Are you sure?' } %>
                </p>
              <% end %>
            </td>
            <td>
              <% c.exams.each do |exam| %>
                <% if exam.form_type.nil? %>
                  <p></p>
                <% else %>
                  <p><%= exam.form_type %></p>
                <% end %>
              <% end %>
            </td>
          <% else %>
            <td style="vertical-align: middle;">
              <p><%= link_to '+ Add exam', new_course_exam_path(c) %></p>
            </td>
            <td></td>
            <td style="vertical-align: middle;"></td>
          <% end %>

          <td><%= link_to "Edit Course", edit_course_path(c) %><br><%= link_to "Delete Course", course_path(c), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
      </tbody>
    </table>
  </div>
<br>
<h4><%= link_to "Add Course", new_course_path %></h4>
</div>

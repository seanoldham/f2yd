              <!--<li><i class="fa fa-calendar"></i> Perk #2</li>-->
            </ul>
          </div>
          <div class="active-pricing-box-footer">
            <% if current_user %>
                <%= form_tag charges_path do %>
                  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                      data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                      data-name="Forms to Your Door"
                      data-description="$2.99/month"
                      data-amount="299"
                      data-panel-label="Pay {{amount}}">
                  </script>
                <% end %>
              <% else %>
                <button type="button" class="btn btn-default"><%= link_to "Log In to Purchase", login_path %></button>
            <% end %>
          </div>
        </div>
      </div>

<header class="wrap-title">
  <div class="container">
    <h1 class="page-title">Pricing</h1>
  </div>
</header>
<div class="container">
  <section>
    <div class="row">
      <div class="col-md-4 col-sm-6">
        <div class="active-pricing-box animated fadeInUp animation-delay-9">
          <!--<div class="active-pricing-box-header">
            <h2>Test Taker</h2>
          </div>-->
          <div class="active-pricing-box-price">
              <h2>$2.99<span id="month_text">/mo</span></h2>
          </div>
          <div class="active-pricing-box-content">
            <ul>
              <li><i class="fa fa-truck"></i>Delivery based on exam schedule.</li>
              <li><i class="fa fa-check-square"></i> One extra form per exam.</li>

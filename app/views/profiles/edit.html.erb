<header class="wrap-title">
  <div class="container">
    <h1 class="page-title">Edit Profile</h1>
  </div>
</header>
<%= form_for @profile do |f| %>
	<% if @profile.errors.any? %>
		<div class="error_messages">
			<h2>Form is invalid</h2>
			<ul>
				<% for message in @profile.errors.full_messages %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
		<div class="form-group">
			<%= f.hidden_field :user_id, :value => current_user.id %>
			<label for="course_num" class="col-sm-2 control-label">First Name:</label>
			<div class="col-sm-10">
			<%= f.text_field :first_name, :id => "first_name" %>
			</div>
		</div>
		<div class="form-group">
			<label for="last_name" class="col-sm-2 control-label">Last Name:</label>
			<div class="col-sm-10">
			<%= f.text_field :last_name, :id => "last_name" %>
			</div>
		</div>
		<div class="form-group">
			<label for="address_one" class="col-sm-2 control-label">Mailing Address 1:</label>
			<div class="col-sm-10">
			<%= f.text_field :address_one, :id => "address_one" %>
			</div>
		</div>
		<div class="form-group">
			<label for="address_two" class="col-sm-2 control-label">Mailing Address 2:</label>
			<div class="col-sm-10">
			<%= f.text_field :address_two, :id => "address_two" %>
			</div>
		</div>
		<div class="form-group">
			<label for="city" class="col-sm-2 control-label">City:</label>
			<div class="col-sm-10">
			<%= f.text_field :city, :id => "city" %>
			</div>
		</div>
		<div class="form-group">
			<label for="state" class="col-sm-2 control-label">State:</label>
			<div class="col-sm-10">
			<%= f.text_field :state, :id => "state" %>
			</div>
		</div>
		<div class="form-group">
			<label for="zip_code" class="col-sm-2 control-label">Zip Code:</label>
			<div class="col-sm-10">
			<%= f.text_field :zip_code, :id => "zip_code" %>
			</div>
		</div>
		<div class="form-group">
			<label for="school_name" class="col-sm-2 control-label">School:</label>
			<div class="col-sm-10">
			<%= f.text_field :school_name, :id => "school_name" %>
			</div>
		</div>
		<div class="form-group">
				<%= f.submit :class => "btn btn-default" %>
		</div>
<% end %>
<h4><%= link_to 'Back', profile_url %></h4>
